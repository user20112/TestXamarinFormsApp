<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TestXamarinFormsApp"
             x:Class="TestXamarinFormsApp.MainPage">

    <StackLayout>
        <ListView x:Name="DisplayListView" ItemTapped="OnItemTapped" HasUnevenRows="true" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="15, 5, 5, 5" HorizontalOptions="StartAndExpand" Orientation="Vertical">
                            <Label Text="This Is a image and label" HeightRequest="30"/>
                            <Image Source="{Binding ActualImage.Source}" HeightRequest="200"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>