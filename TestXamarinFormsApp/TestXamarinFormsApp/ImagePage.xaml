<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:testxamarinformsapp="clr-namespace:TestXamarinFormsApp"
             x:Class="TestXamarinFormsApp.ImagePage">
    <StackLayout Padding="5, 5, 5, 5" >
        <Label Text="{Binding Image.Title}" Style="{StaticResource MediumCenterLabel}" />
        <Label Text="{Binding Image.Description}" Style="{StaticResource SmallCenterLabel}" />
        <testxamarinformsapp:ZoomImage Source="{Binding Image.Image}" Aspect="AspectFill" />
    </StackLayout>
</ContentPage>